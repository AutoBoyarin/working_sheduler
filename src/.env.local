#DB
DB_USER=autoboyarin
DB_PASSWORD=secret
DB_HOST=localhost
DB_PORT=5432
DB_NAME=advertisement

#MINIO
# ==== MinIO настройки докер ====
MINIO_CLIENT_PUBLIC_ACCESS=true
MINIO_INTERNAL_URL=http://localhost:9000
MINIO_PUBLIC_URL=http://localhost:9000
MINIO_ACCESS_KEY=ROOTNAME
MINIO_SECRET_KEY=CHANGEME123
MINIO_SYSTEM_BUCKET=autoboyarin
MINIO_CLIENT_BUCKET=autoboyarin-client

#Параметры запуска
#Чистка локальных результатов
CLEAN_OUTPUT_ON_START=true
#Фиксация результатов в БД
COMMIT_RESULTS=true

#Периодический запуск
# Интервал в минутах; 0 — однократный запуск
SCHEDULER_INTERVAL_MINUTES=0

# Logging
# Уровень логирования: DEBUG/INFO/WARNING/ERROR
LOG_LEVEL=DEBUG
# Формат логов: text или json
LOG_FORMAT=text
# Писать ли логи в файл с ротацией
LOG_TO_FILE=false
# Путь к файлу логов (используется при LOG_TO_FILE=true)
LOG_FILE=logs/app.log
# Максимальный размер файла логов в байтах (по умолчанию 5MB)
LOG_MAX_BYTES=5242880
# Количество резервных файлов логов
LOG_BACKUP_COUNT=3